<article {{ attributes }}>
  {#
    Hide the "new" indicator by default, let a piece of JavaScript ask the
    server which comments are new for the user. Rendering the final "new"
    indicator here would break the render cache.
  #}
  <span class="hidden comment__new" data-comment-timestamp="{{ new_indicator_timestamp }}"></span>

  <div class="comment__text-wrapper">
    <footer class="comment__meta">
      <p class="comment__author">{{ author }}</p>
      <p class="comment__time">{{ time }}</p>
      {% if parent %}
        <p class="visually-hidden">{{ parent }}</p>
      {% endif %}
    </footer>
    <div{{ content_attributes.addClass('comment__content') }}>
      {% if title %}
        {{ title_prefix }}
        <h3{{ title_attributes.addClass('h4', 'comment__title') }}>{{ title }}</h3>
        {{ title_suffix }}
      {% endif %}
      {% block comment_content %}{% endblock %}
    </div>
  </div>
</article>
