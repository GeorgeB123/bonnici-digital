<ul{{ attributes.addClass('language-switcher__list') }}>
  {% for item in links %}
    <li{{ item.attributes.addClass('language-switcher__item') }}>
      {%- if item.link -%}
        {{ item.link }}
      {%- elseif item.text_attributes -%}
        <span{{ item.text_attributes }}>{{ item.text }}</span>
      {%- else -%}
        {{ item.text }}
      {%- endif -%}
    </li>
  {% endfor %}
</ul>
